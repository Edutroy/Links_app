<div class="container p-4">
    <div class="row">
        <div class="col-ms-4 mx-auto">
            <div class="card text-center">
                <div class="card-header">
                    <h3>SignUp Admin</h3>
                    <div class="card-body">
                        <form action="/newadmin" method="post">
                            <div class="form-group">
                                <input type="text" name="fullname" placeholder="Full Name Admin" class="form-control"
                                    autofocus required>
                            </div>
                            <div class="form-group">
                                <input type="text" name="username" placeholder="Username Admin" class="form-control"
                                    autofocus required>
                            </div>
                            <div class="form-group">
                                <input type="password" name="password" placeholder="Password Admin" class="form-control" required>
                            </div>
                            <div class="form-group">
                                <button class="btn btn-success btn-block">
                                    Create
                                </button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>